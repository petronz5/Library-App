<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="devatron.com.controller.BookController" spacing="15" alignment="TOP_CENTER" stylesheets="@styles.css">
    <!-- Header -->
    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10;">
        <Button fx:id="adminButton" text="Area Amministrativa" />
        <Button fx:id="loanManagementButton" text="Gestione Prestiti" />
    </HBox>
    
    <Label text="Gestione Libreria" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- GridPane per i libri -->
    <TableView fx:id="bookTable" style="-fx-pref-width: 600;">
        <columns>
            <TableColumn fx:id="titleColumn" text="Titolo Libro" />
            <TableColumn fx:id="authorColumn" text="Autore" />
            <TableColumn fx:id="quantityColumn" text="Quantità" />
        </columns>
    </TableView>


    <!-- Sezione di aggiunta -->
    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="titleField" promptText="Titolo" />
        <TextField fx:id="authorField" promptText="Autore" />
        <TextField fx:id="quantityField" promptText="Quantità" />
        <Button fx:id="addBookButton" text="Aggiungi Libro" />
    </HBox>

    <!-- Campo filtro -->
    <TextField fx:id="authorFilterField" promptText="Cerca libri per autore" style="-fx-pref-width: 400;" />

    <!-- Pulsante indietro -->
    <Button fx:id="backButton" text="Indietro" />
</VBox>
